<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shuttleBusRowContainer">

    <TextView
        android:id="@+id/originTextView"
        style="@style/AppTheme.TextView.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ORIGIN" />

    <ImageView
        android:id="@+id/busRouteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/busroute"
        android:contentDescription="@string/bus_route_text"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/originTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/destinationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextView.Body"
        tools:text="DESTINATION"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/busRouteImageView"
        app:layout_constraintEnd_toStartOf="@id/arrivalTextView" />

    <TextView
        android:id="@+id/arrivalTextView"
        style="@style/AppTheme.TextView.Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="# MINS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>