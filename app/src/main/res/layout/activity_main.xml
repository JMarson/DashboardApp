<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dashboardBaseContainer"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navBarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_margin"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="0dp"
        android:paddingBottom="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/greetingTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextView.Heading"
            android:layout_marginEnd="@dimen/small_margin"
            app:layout_constraintEnd_toStartOf="@id/notificationImageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hey, NAME" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextView.SubHeading"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            app:layout_constraintEnd_toStartOf="@id/notificationImageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/greetingTextView"
            tools:text="DATE Day, Week #" />

        <ImageButton
            android:id="@+id/notificationImageButton"
            android:layout_width="@dimen/minAccessibleSize"
            android:layout_height="@dimen/minAccessibleSize"
            android:padding="@dimen/notifications_button_padding"
            android:layout_marginEnd="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:contentDescription="@string/notifications_button"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_notifications_none_black"
            app:layout_constraintEnd_toStartOf="@id/profileImageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/profileImageButton"
            android:layout_width="@dimen/minAccessibleSize"
            android:layout_height="@dimen/minAccessibleSize"
            android:padding="@dimen/image_button_padding"
            android:background="@android:color/transparent"
            android:contentDescription="@string/profile_button"
            android:scaleType="fitXY"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboardRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/navBarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>